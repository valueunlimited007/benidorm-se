---
const { title = '', description = '', canonical = '', lang = 'sv-SE' } = Astro.props;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    {canonical && <link rel="canonical" href={canonical} />}
    <style>
      :root { --maxw: 960px; }
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; margin: 0; }
      .container { max-width: var(--maxw); margin: 0 auto; padding: 1.25rem; }
      header, footer { padding: 1rem 0; }
      nav a { margin-right: .75rem; }
      .hero { padding: 1.5rem 0; }
      .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 1rem; }
      .card { border: 1px solid #eee; border-radius: 12px; padding: 1rem; }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <strong><a href="/">Start</a></strong>
        <nav>
          <a href="/var-ska-man-bo/">Bo</a>
          <a href="/saker-att-gora/">Saker att göra</a>
          <a href="/strander/">Stränder</a>
          <a href="/restauranger/">Restauranger</a>
          <a href="/biluthyrning/">Biluthyrning</a>
          <a href="/transfer-flygplats/">Flygplatstransfer</a>
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <small>© {new Date().getFullYear()} Spanien-guider • Integritet • Cookies</small>
      </footer>
    </div>
  </body>
</html>
